extends ../layouts/base.pug

block head
    title Cart 

block body
    if cart.length
        table 
            tr 
                th Product 
                th Price
            each product of cart 
                tr 
                    td #{product.title}
                    td #{product.price}
        h2 Cart Total: $#{total}
    else
        h1 Your cart is empty 
        a(href="/shop/all-products") Shop Something